{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch JsonExtension Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/vscode-client"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/vscode-client/out/src/**/*.js"
            ],
            "preLaunchTask": "json-extension-watch:client"
        },
        {
            "name": "Launch JsonExtension Server",
            "type": "python",
            "request": "launch",
            "console": "none",
            "module": "server",
            "args": [
                "--tcp"
            ],
            "debugStdLib": true,
            "pythonPath": "${config:python.pythonPath}",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
