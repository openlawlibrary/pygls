{
    "configurations": [
        {
            "name": "pygls: Debug Server",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "${config:pygls.server.debugHost}",
                "port": "${config:pygls.server.debugPort}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false
        }
    ]
}
